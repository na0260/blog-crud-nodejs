<div class="container-fluid px-4">
    <h1 class="mt-4">Blogs List</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item">Blogs</li>
        <li class="breadcrumb-item active">List</li>
    </ol>
    <% if (success) { %>
        <div class="alert alert-success"><%= success %></div>
    <% } %>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Blogs List
        </div>
        <div class="card-body">
            <table id="datatablesSimple">
                <thead>
                <tr>
                    <th>Sn.</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Created at</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                <% blogs.forEach((blog, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= blog.title %></td>
                        <td><%= blog.description %></td>
                        <td><%= new Date(blog.createdAt).toDateString() %></td>
                        <td>
                            <a href="/blog/edit/<%= blog.id %>" class="btn btn-primary">Edit</a>
                            <form action="/blog/delete/<%= blog.id %>" method="POST" style="display:inline;">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
                </tbody>
                <tfoot>
                <tr>
                    <th>Sn.</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Created at</th>
                    <th>Action</th>
                </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>